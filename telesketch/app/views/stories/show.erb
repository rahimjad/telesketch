<div style="position:relative; width: 1000px; margin: 0 auto;">
<br/>

    <div id="carousel" class="slider multiple-items" >
      <% @story.inputs.each do |input| %>
        <% if input.is_a?(Text) %>
          <div id="box">
            <p> <a href="/users/<%= input.user_id %>"><%= input.caption %></a></p>
          </div>
        <% else %>
          <img src ="<%= input.image_path %>"/>
        <% end %>
      <% end %> 
    </div>
</div>
    <div class="contributors">
    <div class="row text-center">
      <form method="post" action="/stories/<%= params[:id] %>/rating">
      <span class="star-rating">  
        <input type="radio" name="rating" value="1"><i></i>  
        <input type="radio" name="rating" value="2"><i></i>  
        <input type="radio" name="rating" value="3"><i></i>  
        <input type="radio" name="rating" value="4"><i></i>  
        <input type="radio" name="rating" value="5"><i></i>
      </span>
      <button>Submit</button>
      </form>
      <strong class="choice">Choose a rating</strong> 
  




      <ul class="list-group story-users">
        <div class="row text-center">
              <% @story.inputs.each do |input| %>
                <li class="list-group-item col-sm-3"><a href="/users/<%= input.user_id %>">
                  <%= User.find(input.user_id).name %></a></li>
              <% end %>
        </div>
        </ul>
      
    </div>


<style>
.slick-prev:before, .slick-next:before { 
    color:red !important;
}
</style>


