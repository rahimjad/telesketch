
<div class="row text-center">
  <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2">
    <div class="profile-card">
      <img src="<%= @user.image %>">
      <div class="profile-info">
        <h4 class="subheader" style="color:steelblue;"><%= @user.name %></h4>
        <% if @user == current_user %>
          <form method="get" action="/stories/join">
              <button class="btn btn-primary">Join Game</button>
          </form>
        <% end %> 
      </div>
        <p style="text-align:center; font-size:16px;"><small>User created: <%= @user.created_at.strftime('%m.%d.%Y') %>
        </br>
        Last played: <%= @user.updated_at.strftime('%m.%d.%Y') %> </small></p> 
    </div>
  </div>
</div>
<div class="row text-center">


  <span class="star-rating">  
    <input type="radio" name="rating" value="1"><i></i>  
    <input type="radio" name="rating" value="2"><i></i>  
    <input type="radio" name="rating" value="3"><i></i>  
    <input type="radio" name="rating" value="4"><i></i>  
    <input type="radio" name="rating" value="5"><i></i>
  </span>
  <strong class="choice">Choose a rating</strong>



<h3 style="color: #6f6f6f;">Other games by <%= @user.name %></h3>
    <div class="contributors">
      <ul class="list-group story-users">
        <div class="row text-center col-sm-8 col-sm-offset-2">
          <div class="row">
        <% @user.inputs.each do |input| %>
          <li class="list-group-item col-sm-3 col-xs-12"><a href="/stories/<%= input.story_id %>">
            <%= Story.find(input.story_id).inputs.first.caption %></a></li>
        <% end %>
          </div>
        </div>
        </ul>
      
    </div>
</div>

